rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /audios/{audioId} {
      // Qualquer um pode ler áudios aprovados
      allow read: if resource.data.status == 'approved';
      
      // Usuários autenticados podem criar áudios (status pending)
      allow create: if request.auth != null 
                   && request.resource.data.status == 'pending'
                   && request.resource.data.uploadedBy == request.auth.uid;
      
      // Apenas o criador pode atualizar/deletar seus próprios áudios (se pendentes)
      allow update, delete: if request.auth != null 
                           && resource.data.uploadedBy == request.auth.uid
                           && resource.data.status == 'pending';
      
      // Admin pode ler pendentes e atualizar status
      allow read: if request.auth != null 
                 && resource.data.status == 'pending';
      
      allow update: if request.auth != null
                   && request.resource.data.status in ['approved', 'rejected'];
    }
  }
}
