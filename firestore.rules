rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /audios/{audioId} {
      // Qualquer um pode ler áudios aprovados
      allow read: if resource.data.status == 'approved';
      
      // Usuários autenticados podem criar áudios (status pending)
      allow create: if request.auth != null 
                   && request.resource.data.status == 'pending'
                   && request.resource.data.uploadedBy == request.auth.uid;
      
      // Apenas admin pode aprovar/rejeitar e ver pendentes
      allow update, read: if request.auth != null 
                         && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
  }
}
